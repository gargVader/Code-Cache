<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/colorSecondary"
            app:cardCornerRadius="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_24sdp"
                app:cardCornerRadius="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/pastEventImage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/laptop"></ImageView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/pastEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_90sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_65sdp"
                android:fontFamily="sans-serif-condensed"
                android:text="Competitive Talk by Mr. Subhrata Mukherjee"
                android:textColor="#FFFFFF"
                android:textSize="21sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_70sdp"
                android:src="@drawable/ic_baseline_location_on_24"
                app:tint="#FBEF6A" />

            <TextView
                android:id="@+id/pastEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_110sdp"
                android:layout_marginTop="@dimen/_71sdp"
                android:layout_marginEnd="@dimen/_65sdp"
                android:fontFamily="sans-serif-condensed"
                android:text="CodeChef"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_255sdp"
                android:layout_marginTop="@dimen/_25sdp"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/eventDay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25"
                            android:textAlignment="center"
                            android:textColor="@color/textBlue"
                            android:textSize="23sp"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:background="@color/lightBlue"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/eventMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="APR"
                            android:textAlignment="center"
                            android:textColor="@color/textBlue"
                            android:textSize="13sp"></TextView>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
